<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

        <title>{% block title %}СМИ {% endblock %}</title>
        {% block stylesheets %}

            <link rel="stylesheet" href="/build/components.css" />
            <link rel="stylesheet" href="/build/app.css" />

        {% endblock %}
    </head>
    <body>

        <div class="container">
            <section class="header col-md-12 panel">

                <div class="pull-right ">
                    <br>
                    {% if is_granted("ROLE_USER") %}
                        {{ app.user.name }}
                        (<a href="{{ path('logout') }}">Выйти</a>)

                        {% if app.user.avatara != '' %}
                            <a href="{{ path('profile') }}" class="user-photo">
                                <img src="{{ path('avatara_image', {id: app.user.id}) }}" alt='Avatara' />
                            </a>
                        {% endif %}

                    {% else %}
                        <a href="{{ path('login') }}" class="btn btn-primary">
                            <i class="fa fa-facebook-square" aria-hidden="true"></i>
                            Войдите используя Facebook
                        </a>
                    {% endif %}
                </div>

                <a href="/">
                    <img class="pull-left" src="/images/logo.svg" class="logo" style="width:100px; margin-right:20px">
                </a>
                <h2>MassMedia checker</h2>

                <br class="clearfix"/>
            </section>

            <section>
                <br class="clearfix"/>
                {% block content %}
                    <h2>Welcome!</h2>
                {% endblock %}
            </section>
        </div>

        <script src="/build/components.js"></script>

    </body>
</html>
