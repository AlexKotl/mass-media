{% extends "AppBundle::layout.html.twig" %}

{% block title %}Результаты поиска{% endblock %}

{% block content %}

<h2>Результаты поиска</h2>

{% for site in sites %}

<div class="panel panel-default">
    <div class="panel-body">
        <h3>
            <a href="{{ path('site_details', {url: site.url}) }}">
                {{site.title}}
            </a>
        </h3>
        <p>
            {{ site.description }}
        </p>
    </div>
</div>

{% endfor %}

{% endblock %}
